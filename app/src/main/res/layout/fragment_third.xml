<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student_pool_admin"
    android:background="@color/white"
    >

    <include

        android:id="@+id/top_yello_details"
        layout="@layout/activity_top_yellow_details_bar"

        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-16dp" />

    <TextView
        android:id="@+id/student_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/student"
        android:textSize="35dp"
        android:textColor="@color/purple_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="190dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="120dp"

        />

    <ImageView
        android:id="@+id/p"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/p"
        app:layout_constraintStart_toEndOf="@id/student_text"
        android:layout_marginTop="190dp"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/next_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:layout_marginRight="120dp"
        android:text="@string/pool"
        android:textColor="@color/purple_text"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/p"

        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/white"
        android:contentDescription="create_pool"
        android:src="@mipmap/create_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.487" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/white"
        android:contentDescription="pool_result"
        android:src="@mipmap/result_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.487" />


</androidx.constraintlayout.widget.ConstraintLayout>